<h1><%= @author.name %></h1>

<ul>
  <li><%= image_tag(@author.image) %></li>
  <li><%= @author.dob.strftime '%A %e %B %Y' %></li>
  <li><%= @author.nationality %></li>
  <li><%= link_to'Edit', edit_author_path(@author) %></li>
  <li><%= link_to('Delete', @author, :method => 'delete', :data => {:confirm => 'Are you sure you want to delete this author?'}) %></li>
</ul>

<h3>Books</h3>
<% @author.books.each do |book| %>
  <%= link_to(image_tag(book.image, :title => book.title)) %>
  <% end %>
